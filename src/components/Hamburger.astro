---
import type { Link } from "@types";

interface Props {
  links: Link[];
}

const { links } = Astro.props as Props;
---
<div class="flex flex-col h-[26px] w-[32px] justify-between absolute z-0">
  <input id="hamburger-menu" type="checkbox" class="peer block h-[32px] w-[32px] cursor-pointer absolute z-10 opacity-0"/>
  <span id="hamburger-line-1" class="block h-[4px] w-full rounded-md bg-orange-900 transform peer-checked:rotate-45 origin-top-left ease-in-out duration-300"></span>
  <span id="hamburger-line-1" class="block h-[4px] w-full rounded-md bg-orange-900 transform peer-checked:scale-0 ease-in-out duration-300"></span>
  <span id="hamburger-line-1" class="block h-[4px] w-full rounded-md bg-orange-900 transform peer-checked:rotate-[-45deg] origin-bottom-left ease-in-out duration-300"></span>
  <div id="nav-drawer" class="absolute top-[44px] right-[-10px] h-screen w-[200px] bg-red-100 z-100 text-center shadow-inner transform peer-checked:translate-x-0 translate-x-[200px] peer-checked:visible ease-in-out duration-300">
    {
      links.map(({title, href}) => <div class="m-1">
          <a class=" hover:underline font-bold lg:text-4xl text-3xl" href={href}>{title}</a>
        </div>
      )
    }
  </div>
</div>
