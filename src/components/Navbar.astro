---
import Hamburger from "./Hamburger.astro";
import type { Link } from "@types";

const links: Link[] = [
	{
		title: "Home",
		href: "/"
	},
	{
		title: "Gallery",
		href: "/gallery"
	},
	{
		title: "Blog",
		href: "/blog"
	}
]

interface Props {
	selectedIndex: number;
}

const { selectedIndex } = Astro.props as Props;
---
<div class="sm:sticky top-0 z-40 w-full backdrop-blur flex sm:flex-none lg:z-50 lg:border-b lg:border-slate-900/10 border-slate-50/[0.06] supports-backdrop-blur:bg-white/60 bg-transparent h-16">
	<div class="flex align-middle sm:justify-evenly justify-end py-3">
		<div class="w-screen relative align-middle flex justify-end sm:hidden visible p-2">
			<Hamburger links={links}/>
		</div>
		<div class="sm:flex-row sm:justify-evenly sm:w-screen sm:visible sm:flex hidden">
		{
      links.map(({title, href}, i) => <div class="m-1">
          <a class={`hover:underline font-bold lg:text-4xl text-3xl ${i === selectedIndex ? "underline" : ""}`} href={href}>{title}</a>
        </div>
      )
    }
		</div>
  </div>
</div>
